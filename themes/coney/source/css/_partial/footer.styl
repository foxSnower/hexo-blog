footer
  margin-top 3em
  margin-bottom 3em
  padding 0 2% 0.5em

#footer
  width 100%
  margin 0 auto
  overflow hidden
  position relative
  .line
    width 100%
    height 14em
    margin 0 auto
    @media mini
      width 10em
      float left
      position relative
    span
      display block
      width 0.5em
      height 6.25em
      border-right 0.125em solid color-white
      margin 0 auto
      @media mini
        position absolute
        left 3em
        margin 0 0 1.5em

.author
  width w=(110/16)em
  height w
  margin 0 auto
  if dataURI
    background no-repeat url(author-img-data) left top
  else
    background no-repeat url(root+author-img) left top 
  background-size w w
  border-radius (w/2)
  transition transform 2s ease-out
  &:hover
    transform rotateZ(360deg)
  @media mini
    position: absolute;
    top 6em
    margin 0 0 1.5em

.info
  if ShowCustomFont
    font-family font-custom-family
    font-smoothing()
    font-size font-size+50
    line-height 1.3em
  else
    font-family font-default
    line-height line-height+0.15
  width 90%
  margin 0 auto
  color color-white
  @media mini
    margin 4.5em 0 2em 0
    float left
    width 75%

.social-font
  width 100%
  margin 0 auto
  float left
  padding-left 3%
  @media phone
    padding-left 20%
  @media mini
    width 18em 
    position absolute  
    right -3em
    top 3em
  a
    float left
    display block
    width 14%
    color color-white
    font-size font-size+80
    padding 0.5em
    @media tablet
      padding 0.3em
    &:hover:before
      color color-blue
.copyright
  background color-footer
  border-radius 6px
  if ShowCustomFont
    font-smoothing()
    font-family font-default
  else
    font-family font-default
    font-size 0.6em
  width 100%
  color color-black
  text-align center
  @media mini
    float left
  a
    color color-blue
    &:hover
      color color-blue

.dashang
  text-align:center;
  .weixin-box
     opacity 0
     transition opacity .45s
.dashang:hover
  .weixin-box
    opacity 1
    display block
    position absolute
    left 50%
    margin-left w=-(110/16+2)em
    text-align center
    bottom w/2
    transition opacity .45s
    .weixin
      display inline-block
      width w=(110/16)em
      height w 
      margin 0 1em
      if dataURI
        background no-repeat url(author-img-data) left top
      else
        background no-repeat url(../root+weixin-img) left top 
      background-size w w
      transform scale(1.2)
    .zhifu
      display inline-block
      width w=(110/16)em
      height w 
      margin 0 1em
      if dataURI
        background no-repeat url(author-img-data) left top
      else
        background no-repeat url(../root+zhifu-img) left top 
      background-size w w
      transform scale(1.2)

